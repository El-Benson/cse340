<%- include("../partials/head") %>
<%- include("../partials/header") %>
<%- include("../partials/nav") %>

<main>
  <h1>Welcome <%= locals.accountData.account_firstname %></h1>
  <p>You are logged in as a <%= locals.accountData.account_type %>.</p>

  <section id="account-options">
    <h2>Account Management</h2>
    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>" class="button">
        Update Account Information
      </a>
    </p>
  </section>

  <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <section id="inventory-options">
      <h2>Inventory Management</h2>
      <p>
        <a href="/inv/management" class="button">
          Manage Inventory
        </a>
      </p>
    </section>
  <% } %>
</main>

<%- include("../partials/footer") %>
